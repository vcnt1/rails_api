<div class="d-flex">
	<h3>Produtos</h3>
</div>

<% @produtos.each do |produto| %>
	<div class="mt-4 text-white" style=" width: 15%; background-color: #444e59; overflow: auto">
		<div class="p-3">
			 <div class="d-flex justify-content-between">
			    <h4><%= produto.nome %></h4>
			    <h5 class="mt-1">R$ <%= produto.preco %></h5>
			 </div>
			 <h6><%= produto.descricao %></h6>
			 <h6 class="float-right">x<%= produto.quantidade %></h6>
		
			<div class="mt-5 d-flex justify-content-between">
				<div></div>
				<%= link_to "Comprar", '/home/create_produto', method: :get, class: "btn btn-success" %>
			</div>
		</div>
	</div>
<% end %>